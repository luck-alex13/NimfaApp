<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_top_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/congratulate_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:text="Поздравляем!"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_largest"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/change_action_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_medium_large"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <Button
                android:id="@+id/buy_token_ico_button"
                style="@style/custom_button"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/begin_trade_button"
                android:text="@string/buy_token_ico" />

            <Button
                android:id="@+id/begin_trade_button"
                style="@style/custom_button"
                android:layout_centerInParent="true"
                android:text="@string/begin_trade" />
        </RelativeLayout>
    </LinearLayout>
</layout>